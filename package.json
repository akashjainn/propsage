{
  "name": "propsage",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:api": "tsx apps/api/src/index.ts",
    "dev:web": "pnpm --filter @propsage/web dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write .",
    "typecheck": "tsc -b apps/api packages/core",
    "prepare": "husky install",
    "dev:turbo": "turbo run dev --parallel"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "tsx": "^4.20.6",
    "turbo": "^2.0.6",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --write"
    ]
  }
}
