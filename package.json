{
  "name": "propsage",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:api": "tsx apps/api/src/index.ts",
    "dev:web": "pnpm --filter @propsage/web dev",
    "test:e2e": "playwright test",
    "demo": "cross-env DEMO_MODE=true FEATURE_FLAGS=demo_mode:true npm-run-all -p dev:api dev:web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write .",
    "typecheck": "tsc -b apps/api packages/core",
    "prepare": "husky install",
    "dev:turbo": "turbo run dev --parallel",
    "tl:setup": "node scripts/setup-tl-index.js",
    "tl:index": "node scripts/index-videos.js",
    "tl:status": "node scripts/check-tl-status.js",
    "tl:health": "node scripts/check-tl-status.js --health",
    "tl:search": "node scripts/check-tl-status.js --search",
    "tl:test": "node scripts/check-tl-status.js --test-queries",
    "setup:storage": "cd apps/api && node ../../scripts/setup-cloud-storage.js",
    "setup:storage:aws": "cd apps/api && node ../../scripts/setup-cloud-storage.js --provider=aws",
    "setup:storage:r2": "cd apps/api && node ../../scripts/setup-cloud-storage.js --provider=r2",
    "test:storage": "cd apps/api && node ../../scripts/setup-cloud-storage.js --test"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "tsx": "^4.20.6",
    "turbo": "^2.0.6",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1"
  }
}
