# PropSage Environment Variables
# Copy to .env for local development

# === LOCAL DEVELOPMENT ===
DEMO_MODE=true
VIDEO_ENABLED=true
PPLX_API_KEY=your-perplexity-key-here
TL_API_KEY=your-twelvelabs-key-here
PORT=4000
REDIS_URL=redis://localhost:6379
FEATURE_FLAGS=demo_mode:true,video:true
WEB_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_API_WS_URL=ws://localhost:4000
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_VIDEO_ENABLED=true

# === RAILWAY (API) DEPLOYMENT ===
# Set these in Railway dashboard:
# DEMO_MODE=true
# VIDEO_ENABLED=true
# PPLX_API_KEY=your-actual-perplexity-key
# TL_API_KEY=your-actual-twelvelabs-key
# PORT=8080
# FEATURE_FLAGS=demo_mode:true,video:true
# CORS_ORIGIN=https://your-vercel-domain.vercel.app

# === VERCEL (WEB) DEPLOYMENT ===
# Set these in Vercel dashboard:
# NEXT_PUBLIC_DEMO_MODE=true
# NEXT_PUBLIC_VIDEO_ENABLED=true
# NEXT_PUBLIC_API_URL=https://your-railway-domain.up.railway.app
# NEXT_PUBLIC_API_WS_URL=wss://your-railway-domain.up.railway.app
# NEXT_PUBLIC_HACKGT_MODE=true
