# PropSage Real-time Development Environment
# Copy this to .env.local and adjust values as needed

# Demo/Development Mode (use mock data)
DEMO_MODE=true
MOCK_REALTIME=true

# Real-time Features (Phase 0 - Foundation)
NEXT_PUBLIC_RT_ENABLED=true
NEXT_PUBLIC_LIVE_ODDS=false
NEXT_PUBLIC_WS_ENABLED=false

# Data Sources (when not in demo mode)
THE_ODDS_API_KEY=your_api_key_here
NEXT_PUBLIC_ODDS_PROVIDERS=draftkings,fanduel,caesars
NEXT_PUBLIC_LEAGUES=cfb,nfl,nba

# Performance Settings
NEXT_PUBLIC_MAX_GAMES=10
NEXT_PUBLIC_UPDATE_INTERVAL=5000

# Existing Features
NEXT_PUBLIC_FEATURE_TL=false
NEXT_PUBLIC_VIDEO_ENABLED=false
NEXT_PUBLIC_FEATURE_TOP_EDGES=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000